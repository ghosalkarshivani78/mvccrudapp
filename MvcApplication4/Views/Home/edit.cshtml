@model MvcApplication4.Models.Event
@{
    ViewBag.Title = "edit";
}

<!doctype html>
<html lang="en">
  <head>
  

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"/>

    <title>Hello, world!</title>
      <style type="text/css">
          .style1
          {
              height: 34px;
          }
      </style>
  </head>
  <body>
  <div class="container">
    
  <form action="@Url.Action("updateuser", "Home")" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">First Name</label>
    <input type="text" class="form-control" name="firstname" value="@Html.DisplayFor(ModelItem => Model.firstname)"/>
     <input type="hidden" class="form-control" name="id" value="@Html.DisplayFor(ModelItem => Model.id)">
  </div>
  <div class="form-group">
    <label>Last name</label>
    <input type="text" class="form-control" name="lastname" value="@Html.DisplayFor(ModelItem => Model.lastname)"/>
  </div>
   <div class="form-group">
  <label>Email</label>
    <input type="text"  class="form-control" name="email" value="@Html.DisplayFor(ModelItem => Model.email)"/>
  </div>
  <div class="form-group">
  <label>Address</label>
    <input type="text" class="form-control" name="address" value="@Html.DisplayFor(ModelItem => Model.address)"/>
  </div>
   <div class="form-group">
    <label>city</label>
    <select class="form-control" name="city" value="@Html.DisplayFor(ModelItem => Model.city)">
    @if(Model.city=="Thane")
    {
        <option selected value="Thane">Thane</option>
      <option value="Mumbai">Mumbai</option>
      <option value="Panvel">Panvel</option>
    }
    else if (Model.city == "Mumbai")
    {
        <option value="Thane">Thane</option>
      <option selected value="Mumbai">Mumbai</option>
      <option value="Panvel">Panvel</option>
      
     
    }
    else
    {
         <option value="Thane">Thane</option>
      <option value="Mumbai">Mumbai</option>
      <option selected value="Panvel">Panvel</option>
      
     
    }
   
      
      
    </select>
  </div>
  <div class="form-group">
  <label>Number</label>
    <input type="text"  class="form-control" name="number" value="@Html.DisplayFor(ModelItem => Model.number)"/>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>

  </div>

  
    
   

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    
    
    <script type="text/javascript"  src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script type="text/javascript"  src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript"  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>

  </body>
  
</html>

